<form action="/myTests/category" method="POST">

    <div class="input-group mb-3 col-centered">

        <input class="form-control col-md-6 " id="searchtest" onkeyup="testSearch()" type="text" placeholder="Search..">

        <span class="col-md-3 col-sm-2 h4 text-right">Choose category:</span>
        <select class="col-md-2 col-sm-4 class-select" name="options" onchange="this.form.submit()">
            <option value="all" selected>All</option>
            {{#each categories}}
            <option value="{{ID}}" {{#if (eq ID ../categoryId)}}selected {{/if}}>{{CategoryName}}</option>
            {{/each}}
        </select>

    </div>
</form>
<hr>

<div class="card-columns mt-2">

    {{#each test}}
    
    <div class="card testCard"  {{#if (eq this.Allowed 1)}}style="border-color:green;"{{/if}}>
        <div class="card-body">
            <h3 id="card-title" class="card-title d-inline-block">{{TestName}}</h3>
            <span class="float-right small">{{categoryname}}</span>
            <div class="mb-3"></div>
            <i class="far fa-edit " style="color:black"></i>
            {{#if (eq this.Activated 0)}}
            <a class="editLink" href="/test/{{TestName}}">Edit</a>
            {{/if}}
            <i class="fas fa-chart-bar ml-3" style="color:black;"></i>
            <a href="#">Stats</a>
            {{#if (eq this.Activated 0)}}
            <a href="#" class="float-right activate" data-toggle="hint" data-placement="top" title="After activating the test, you will not be able to edit it anymore"><button value="{{TestID}}" class="btn btn-outline-primary activate">Activate</button></a>
            {{/if}}
            {{#if (eq this.Activated 1)}}
                {{#if (eq this.Allowed 0)}}
                <a href="#" class="float-right" data-toggle="hint" data-placement="top" title="Make this test available to students"><button value="{{TestID}}" class="btn btn-outline-success enable ">Enable</button></a>
                {{else}}
                <a href="#" class="float-right" data-toggle="hint" data-placement="top" title="Hide this test to students"><button value="{{TestID}}" class="btn btn-outline-warning disable">Hide</button></a>
                {{/if}}
            {{/if}}
        </div>
    </div>

    
    {{/each}}

</div>


{{#unless test}}
<h2>No tests found</h2>

