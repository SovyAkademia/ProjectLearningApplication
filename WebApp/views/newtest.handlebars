<div class="container">
  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <div id="namediv">
            <h3 id="testnamelabel" for=""></h3>
          </div>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Create a Test</h4>
        </div>
        <div class="modal-body">

          <input class="btn-create col-md-12" type="button" value="Create New Qusetion +" onclick="addRow()">

          <div id="counter"></div>
          <input class="col-md-8 col-sm-10 questioninput" id="questioninput" placeholder="Question?" required type="text"
            value="" />
          <input class="btn btn-danger btn-delete" type="button" value="Delete" onclick="removeRow(this)">
          <br>
          <div class="row">
            <div class="container">
              <div class="col-md-12 col-sm-12">
                <input id="pointsin" placeholder="Points" list="points">
                <datalist id="points">
                  <option value="1">
                    <option value="2">
                      <option value="3">
                        <option value="4">
                          <option value="5">
                </datalist>
                <br>
                <label for="">A</label>
                <input class="answer" type="text">
                <input class="ok" name="correctans" type="radio">
                <br>
                <label for="">B</label>
                <input class="answer" type="text">
                <input class="ok" name="correctans" type="radio">
                <br>
                <label for="">C</label>
                <input class="answer" type="text">
                <input class="ok" name="correctans" type="radio">
                <br>
                <label for="">D</label>
                <input class="answer" type="text">
                <input class="ok" name="correctans" type="radio">
              </div>
            </div>
          </div>
          <hr>



        </div>
        <div class="modal-footer">
          <button class="btn btn-md testsave btn-success" data-dismiss="modal" onclick="newItem()">Save the test</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>

</div>

<div class="container">
  <!-- Modal -->
  <div class="modal fade" id="choose" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Choose from existing Questions</h4>
        </div>
        <div class="modal-body">

          <input class="btn-create col-md-12" type="button" value="Create New Qusetion +" onclick="addRow()">

          <div id="content">

          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>

</div>


<div class="container testcreate">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-6">
          <input class="testinf" id="testname" placeholder="Test name" type="text">
        </div>
        <div class="col-md-6">
          <input class="testinf" id="choosecat" placeholder="Choose a category" list="Categories">
          <datalist id="Categories">

            {{#each categories}}
            <option value={{this.name}}>
            {{/each}}
          </datalist>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-sm-12">
      <button type="button" id="addquest" class="btn addquest disabled btn-info btn-md col-md-12 " onclick="testName()" data-toggle="modal"
        data-target="#myModal">Add new question</button>
    </div>
    <div class="col-md-6 col-sm-12">
      <button type="button" class="btn addquest disabled btn-info btn-md col-md-12" data-toggle="modal" data-target="#choose">Choose from existing questions</button>
    </div>
    <div class="col-md-12">
      <table id="questionlist">

      </table>
    </div>
    <div class="buttons col-md-12 col-sm-12">
      <button class="btn col-sm-12 testbtns btn-success">Save the test</button>
      <button class="btn col-sm-12 testbtns btn-danger">Cancel the test</button>
    </div>
  </div>
</div>