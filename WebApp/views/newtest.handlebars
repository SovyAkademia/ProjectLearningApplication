<div id="newCategoryModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <form action="/createTest/createCategory" method="POST">
      <div class="modal-content">
        <div class="modal-header">

          <h4 class="modal-title">Create new category</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <span>Category Name: </span>
          <input id="newCategoryInput" name="categoryName" type="text">
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </div>
    </form>

  </div>
</div>

<form action="/createTest" method="POST">
  <div class="container testcreate col-lg-7 col-md-10">
    <h2 class="text-center">Create new test</h2>
    <hr>
      <div class="col-md-12">
            <div class="form-group">
              <div class="col-md-12 input-group">
                <label for="testCategory">Test category:</label>
                <select id="categories" name="testCategory" class=" form-control col-md-6 col-sm-4 ml-4 d-inline-block">
                  {{#each categories}}

                  <option value="{{this.CategoryName}}">{{this.CategoryName}}</option>
                  {{/each}}
                </select>
              </div>
              <div class="centered">

              <span class="ml-5">or
                <a href="" data-toggle="modal" data-target="#newCategoryModal">Create new category</a>
              </span>
              </div>
            </div>



          <div class="col-md-12">
            <label for="testName">Test name:</label>
            <input class="testinf col-md-6 col-sm-6 col-xs-6" type="text" id="testname" placeholder="e.g. Java basics" type="text" name="testName">
            
            <button type="submit" name="test" id="addquest" class="test btn addquest btn-info btn-md col-md-12 " data-target="#choose"
              data-toggle="modal" data-target="#myModal" style="display: none">Start creating test</button>
          </div>
          
          
        
      </div>
    

    <div class="row">

      <div class="col-md-12">
        <table id="questionlist">

        </table>
      </div>
    </div>
    <div class="text-right" style="color:red">{{message}}</div>
  </div>
</form>

