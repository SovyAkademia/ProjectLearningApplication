<form action="/createTest" method="POST">
  <div class="container testcreate">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          
          <div class="col-md-12">
            <input class="testinf" id="choosecat" placeholder="Choose a category" list="Categories" name="testCategory">
            <datalist id="Categories">

              {{#each categories}}
              <option value={{this.name}}>
                {{/each}}

            </datalist>
          </div>

          <div class="col-md-12">
             <input class="testinf" type="text" id="testname" placeholder="Test name" type="text" name="testName">
              <button type="submit" name="test"  id="addquest" class="test btn addquest btn-info btn-md col-md-12 " data-target="#choose" data-toggle="modal" data-target="#myModal" style="display: none">Create new test</button>
          </div>
        </div>
      </div>
    </div>
    <div class="row">

      
      <div class="col-md-12">
        <table id="questionlist">

        </table>
      </div>
    </div>
  </div>
</form>