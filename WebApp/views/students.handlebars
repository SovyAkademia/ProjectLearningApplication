<div class="col-md-6 studentslist">
    

        <form action="/students/class" method="POST">
        <div class="input-group mb-3">
            <input class="form-control col-md-8 "  id="search" type="text" placeholder="Search.." >
            <select class="col-md-4 class-select" name="options" onchange="this.form.submit()">
                <option value="0" disabled selected>Select class</option>
                <option value="1">1.N</option>
                <option value="2">2.N</option>
                <option value="3">3.N</option>
            </select>
            </div>
        </form>


    {{#if result}}
    <table class="table table_show student-table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Class</th>

            </tr>
        </thead>
        <tbody id="myTable">
            {{#each result}}
            <tr>
                <td class="number"></td>
                <td class="name">
                    <a href="/students/{{ID}}">{{FirstName}} {{LastName}}</a>
                </td>
                <td class="class">{{class}}.N</td>
