<div class="col-md-11 teacherlist">

    <form method="POST" class="form-horizontal" role="form" action="/teacher/send">
        <!-- Modal -->
        <div class="modal fade" id="inviteTeacher" role="dialog">
            <div class="modal-dialog">
                <!-- contenModal t-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Invite teacher</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <input class="col-md-8 col-sm-10" placeholder="E-Mail" type="text" name="inviteTeacher">
                        <button type="submit" class="btn btn-md btn-success">Send invitation</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <button type="button" id="inviteTeacherBtn" class="btn btn-md testsave btn-success" data-toggle="modal" data-target="#inviteTeacher">Invite teacher</button>


    <table id="teachersTable" class="table table_show teacher-table table-bordered">
        <thead class="thead">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Remove</th>
            </tr>
        </thead>
        <tbody>
            {{#each teacher}}
            <tr id="mainTR">
                <td class="name tableTeacherName">{{FirstName}} {{LastName}}</td>
                <td class="class">{{Email}}</td>
                {{!--
                <td class="class">
                    <a href="/students/remove/{{ID}}" onclick="return confirm('Are you sure you want to remove this student?')">
                        <button class="btn btn-sm btn-danger deleteStudent">Remove</button>
                    </a>
                </td>
                --}} </tr>
            {{/each}}
        </tbody>
    </table>


</div>