<div class="container">

  <form method="post" action="/test/{{questions.ID}}/?_method=PUT" id="form">
    <input type="hidden" name="_method" value="PUT">
    <!-- Modal -->
    <div class="modal fade" id="Edit" role="dialog">
      <div class="modal-dialog">
        <!-- contenModal t-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          <div class="modal-body">
            <div id="counter"></div>
            <input class="col-md-8 col-sm-10 questioninput" id="questioninput" placeholder="Question?" type="text" name="textQuest" value="{{questions.QuestionText}}"
            />
            <br>

            <div class="row">
              <div class="container">
                <div class="col-md-12 col-sm-12">

                  <div class="container">
                    <select name="selectPoint" class="selectPoints" id="pointsin">
                      <optgroup label="Select points">
                        <option name="1" value="1">1</option>
                        <option name="2" value="2">2</option>
                        <option name="3" value="3">3</option>
                        <option name="4" value="4">4</option>
                        <option name="5" value="5">5</option>
                      </optgroup>
                    </select>
                    <br>
                    <label for="">A</label>
                    <input class="answer" id="ansa" type="text" name="ansa" value="{{questions.ans1}}">
                    <input class="ok" id="checka" name="corr" type="radio" value="A">
                    <br>
                    <label for="">B</label>
                    <input class="answer" id="ansb" type="text" name="ansb" value="{{questions.ans2}}">
                    <input class="ok" id="checkb"name="corr" type="radio" value="B">
                    <br>
                    <label for="">C</label>
                    <input class="answer" id="ansc" type="text" name="ansc" value="{{questions.ans3}}">
                    <input class="ok" id="checkc" name="corr" type="radio" value="C">
                    <br>
                    <label for="">D</label>
                    <input class="answer" id="ansd" type="text" name="ansd" value="{{questions.ans4}}">
                    <input class="ok" id="checkd" name="corr" type="radio" value="D">
                  </div>
                </div>
              </div>
            </div>
            <hr>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-md testsave btn-success">Add the question</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </form>

  <form action="/test/{{TestName}}" method="POST" id="form">
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
      <div class="modal-dialog">
        <!-- contenModal t-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Create a Test</h4>
          </div>
          <div class="modal-body">

            <input class="btn-create col-md-12" type="button" value="Create New Qusetion +" onclick="addRow()">

            <div id="counter"></div>
            <input class="col-md-8 col-sm-10 questioninput" id="questioninput" placeholder="Question?" required type="text" name="textQuest"
            />
            <input class="btn btn-danger btn-delete" type="button" value="Delete" onclick="removeRow(this)">
            <br>

            <div class="row">
              <div class="container">
                <div class="col-md-12 col-sm-12">

                  <div class="container">
                    <select name="selectPoint" id="pointsin">
                      <optgroup label="Select points">
                        <option name="1" value="1">1</option>
                        <option name="2" value="2">2</option>
                        <option name="3" value="3">3</option>
                        <option name="4" value="4">4</option>
                        <option name="5" value="5">5</option>
                      </optgroup>
                    </select>
                    <br>
                    <label for="">A</label>
                    <input class="answer" id="ansa" type="text" name="ansa">
                    <input class="ok" name="corr" type="radio" value="A">
                    <br>
                    <label for="">B</label>
                    <input class="answer" id="ansb" type="text" name="ansb">
                    <input class="ok" name="corr" type="radio" value="B">
                    <br>
                    <label for="">C</label>
                    <input class="answer" id="ansc" type="text" name="ansc">
                    <input class="ok" name="corr" type="radio" value="C">
                    <br>
                    <label for="">D</label>
                    <input class="answer" id="ansd" type="text" name="ansd">
                    <input class="ok" name="corr" type="radio" value="D">
                  </div>
                </div>
              </div>
            </div>
            <hr>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-md testsave btn-success">Add the question</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </form>


</div>
<div class="container">
  <!-- Modal -->
  <div class="modal fade" id="choose" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Choose from existing Questions</h4>
        </div>
        <div class="modal-body">

          <input class="btn-create col-md-12" type="button" value="Create New Qusetion +" onclick="addRow()">

          <div id="content">

          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>

</div>


<div class="container testcreate">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-6">
          <h4>Test name:
            <span id="nameOfTest">{{TestName}}</span>
          </h4>
        </div>
        <div class="col-md-6">
          <h4>Test category: {{CategoryName}}</h4>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-sm-12">
      <button type="button" id="addquest" class="btn addquest btn-info btn-md col-md-12 " data-toggle="modal" data-target="#myModal">Add new question</button>
      <table class="col-md-12 testquestions" id="questionlist">
        <thead>
          <tr id="test">
            <th>Question</th>
            <th>Answers</th>
            <th>Edit</th>
          </tr>
        </thead>
        <tbody>
          {{#each questions}}
          <tr>
            <td>{{this.QuestionText}}</td>

            <td id="tooltip">Answers
              <span id="tooltiptext">
                <p>A. {{this.ans1}}</p>
                <p>B. {{this.ans2}}</p>
                <p>C. {{this.ans3}}</p>
                <p>D. {{this.ans4}}</p>
              </span>
            </td>

            <td>
              <button value="{{ID}}" type="button" class="btn addquest editBtn btn-info btn-md col-md-12" data-toggle="modal" data-target="#Edit">Edit
              </button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-md-6 col-sm-12">
      <button type="button" class="btn addquest btn-info btn-md col-md-12" data-toggle="modal" data-target="#choose">Choose from existing questions</button>
      <table class="col-md-12 existingquestions"></table>
    </div>
    <div class="buttons col-md-12 col-sm-12">
      {{!--
      <button class="btn col-sm-12 testbtns btn-success">Save the test</button>
      <button class="btn col-sm-12 testbtns btn-danger">Cancel the test</button> --}}
    </div>
  </div>
</div>