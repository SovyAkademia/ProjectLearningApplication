<div class="container">

  <form method="post" action="/test/{{TestName}}/edit" id="form">
    <input type="hidden" name="QID" class="hiddenQID">
    <!-- Modal -->
    <div class="modal fade" id="Edit" role="dialog">
      <div class="modal-dialog">
        <!-- contenModal t-->
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Edit question</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          <div class="modal-body">
            <div id="counter"></div>
            <div class="text-center">
              <textarea name="textQuest" id="questioninput" class="questioninput" cols="30" rows="3"></textarea>
            </div>

            <div class="row">
              <div class="container">
                <div class="col-md-12 col-sm-12">

                  <div class="container">
                    <div class="text-center">
                      <span>Points:</span>
                      <select name="selectPoint" class="selectPoints" id="pointsin">
                        <optgroup label="Select points">
                          <option name="1" value="1">1</option>
                          <option name="2" value="2">2</option>
                          <option name="3" value="3">3</option>
                          <option name="4" value="4">4</option>
                          <option name="5" value="5">5</option>
                        </optgroup>
                      </select>
                    </div>
                    <br>
                    <div style="margin-left:35px; padding:5px;">
                      <strong>Answers</strong>
                      <strong style="margin-left:153px;">Correct</strong>
                    </div>
                    <label for="">A</label>
                    <input class="answer col-md-6 col-sm-6" id="ansa" type="text" name="ansa" value="" required>
                    <input class="ok checka" name="corr" type="radio" value="A">
                    <br>
                    <label for="">B</label>
                    <input class="answer col-md-6 col-sm-6" id="ansb" type="text" name="ansb" value="" required>
                    <input class="ok checkb" name="corr" type="radio" value="B">
                    <br>
                    <label for="">C</label>
                    <input class="answer col-md-6 col-sm-6" id="ansc" type="text" name="ansc" value="" required>
                    <input class="ok checkc" name="corr" type="radio" value="C">
                    <br>
                    <label for="">D</label>
                    <input class="answer col-md-6 col-sm-6" id="ansd" type="text" name="ansd" value="" required>
                    <input class="ok checkd" name="corr" type="radio" value="D">
                  </div>
                </div>
              </div>
            </div>
            <hr>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-md testedit btn-success">Save</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </form>

