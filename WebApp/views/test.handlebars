<div class="container">
  <!-- Modal -->
  <div class="modal fade" id="choose" role="dialog">
    <div class="modal-dialog modal-lg">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">

          <h4 class="modal-title">Choose from existing Questions</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">

          <div class="form-group">
            <label for="testSelect">Select test to choose questions from</label>
            <select class="form-control col-md-12" id="testSelect">

            </select>


            <table id="questions" class="col-md-12" style="overflow-y: scroll;">


            </table>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>

      </div>
    </div>

  </div>


  <div class="container testcreate">
    <div class="col-md-12 text-center">
      <h1>
        <span id="nameOfTest">{{TestName}}</span>
      </h1>

    </div>

    <div class="row mt-3">
      <div class="col-md-12">
        <div class="row text-center">


        </div>
      </div>
    </div>
    <div class="row text-center">
      <div class="col-md-12">
        <button type="button" id="addnewquest" class="btn  addquest btn-info btn-md col-md-4 " data-toggle="modal" data-target="#myModal">Add new question</button>
        <button type="button" id="chooseExist" class="btn ml-3 addExistQuestion btn-info btn-md col-md-4" data-toggle="modal" data-target="#choose">Choose from existing questions</button>
      </div>
    </div>
    <hr>

    <div class="row">
      <div class="col-md-12 col-sm-12">

        {{#each questions}}
        <div class="ml-5">

          <h4>{{this.QuestionText}}</h4>

          <p>A. {{this.ans1}}</p>
          <p>B. {{this.ans2}}</p>
          <p>C. {{this.ans3}}</p>
          <p>D. {{this.ans4}}</p>
          



          <button value="{{ID}}" type="button" class="btn addquest editBtn btn-info btn-sm col-md-1" data-toggle="modal" data-target="#Edit">Edit</button>
          <button value="{{ID}}" type="button" class="btn addquest deleteQuest deleteBtn btn-danger btn-sm col-md-1">Delete</button>

        </div>
        <hr> {{/each}}

      </div>
      <div class="buttons col-md-12 col-sm-12">
        {{!--
        <button class="btn col-sm-12 testbtns btn-success">Save the test</button>
        <button class="btn col-sm-12 testbtns btn-danger">Cancel the test</button> --}}
      </div>
    </div>
  </div>